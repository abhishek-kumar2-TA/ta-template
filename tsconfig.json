{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "NodeNext",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "outDir": "dist",
        "jsx": "react-jsx"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist"
    ]
}